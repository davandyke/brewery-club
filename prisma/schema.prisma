// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Membership & Logic
  isAdmin            Boolean   @default(false)
  isApproved         Boolean   @default(false) // For manual approval
  isAttendingNextWeek Boolean  @default(false)

  // Relationships
  checkIns CheckIn[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// -----------------------------------------------------------------------------
// Application Models
// -----------------------------------------------------------------------------

model Brewery {
  id            String   @id @default(cuid())
  visitWidgetId String   @unique // ID from brewsader.visitwidget.com
  name          String
  address       String?
  city          String?
  state         String?
  zip           String?
  latitude      Float?
  longitude     Float?
  description   String?  @db.Text
  heroImage     String?
  websiteUrl    String?
  isChecked     Boolean  @default(false) // Deprecated global flag, use CheckIn model instead

  checkIns CheckIn[]
  events   Event[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CheckIn {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  brewery   Brewery  @relation(fields: [breweryId], references: [id], onDelete: Cascade)
  breweryId String
  checkInDate DateTime @default(now())

  @@unique([userId, breweryId]) // Prevent duplicate check-ins for now? Or allow multiple? 
                                // User said "mark breweries they've visited", usually implies boolean state.
                                // But a check-in could happen multiple times. 
                                // For "missing check-ins" logic, existence is enough.
                                // I will stick to unique for simplicity unless user wants history.
}

model Event {
  id            String   @id @default(cuid())
  visitWidgetId String?  @unique // ID from source if available
  title         String
  description   String?  @db.Text
  startDate     DateTime
  endDate       DateTime?
  location      String?
  url           String?
  imageUrl      String?
  
  brewery       Brewery? @relation(fields: [breweryId], references: [id])
  breweryId     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
